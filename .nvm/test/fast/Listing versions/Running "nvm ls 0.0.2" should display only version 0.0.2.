#!/bin/sh

mkdir ../../../v0.0.2
mkdir ../../../v0.0.20

. ../../../nvm.sh

die () { echo $@ ; exit 1; }

# The result should contain only the appropriate version numbers.

nvm ls 0.0.2 | grep 'v0.0.2' > /dev/null
if [ $? -eq 0 ]; then
  echo '"nvm ls 0.0.2" contained v0.0.2'
fi

nvm ls 0.0.2 | grep 'v0.0.20' > /dev/null
if [ $? -eq 0 ]; then
  die '"nvm ls 0.0.2" contained v0.0.20'
fi

